{
  "name": "qa-automation-starter-aris-ellis",
  "version": "1.0.0",
  "private": true,
  "description": "Playwright + TypeScript starter with CI, visual checks, API tests, and Slack summary (optional).",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:smoke": "playwright test -g '@smoke'",
    "report": "playwright show-report",
    "install:drivers": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0"
  }
}